@model ArtSolution.Web.Areas.Admin.Models.Orders.OrderDeliveryModel
@{
    //page title
    ViewBag.Title = "订单详情";
    var order = (ArtSolution.Web.Areas.Admin.Models.Orders.OrderDtailModel)ViewData["order"];
}

<section class="content-header">
    <h1>订单配送</h1>
</section>
<section class="content">
    <div class="portlet-body">
        <div class="section-header">
            <ol class="breadcrumbs pull-right">
                <li><a href="@Url.Action("List")" class="btn btn-primary"><i class="fa fa-fw fa-plus-square"></i>返回列表</a></li>
            </ol>
        </div>

        <div class="order-detail">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken();
                @Html.HiddenFor(model => model.OrderId)

            <table class="adminView">
                <tr>
                    <td class="adminTitle">@Html.LabelFor(model => model.DeliveryId)</td>
                    <td class="adminData">@Html.DropDownListFor(model => model.DeliveryId, Model.AvailableDeliveries)</td>
                    <td class="adminData" rowspan="2">
                        <input type="submit" class="btn btn-success" value="保存"/>
                    </td>
                </tr>
                <tr>
                    <td class="adminTitle">@Html.LabelFor(model => model.DeliveryCode)</td>
                    <td class="adminData">@Html.ArtEditorFor(model => model.DeliveryCode)</td>
                </tr>
            </table>
            }
            @Html.Partial("_OrderView", order)
            
        </div>
    </div>
</section>
