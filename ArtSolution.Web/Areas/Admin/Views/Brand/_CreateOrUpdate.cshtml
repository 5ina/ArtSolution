@model ArtSolution.Web.Areas.Admin.Models.Catalog.BrandModel


@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)
<div id="brand-edit">
    <div class="box">
        <div class="row">
            <div class="col-md-9">
                <table class="adminContent">
                    <tr>
                        <td class="adminTitle">
                            @Html.ArtLabelFor(model => model.Name):
                        </td>
                        <td class="adminData">
                            @Html.ArtEditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            @Html.ArtLabelFor(model => model.BrandImage):
                        </td>
                        <td class="adminData">
                            @Html.ArtEditorFor(model => model.BrandImage)
                            @Html.ValidationMessageFor(model => model.BrandImage)
                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            @Html.ArtLabelFor(model => model.Description):
                        </td>
                        <td class="adminData">
                            @Html.TextAreaFor(model => model.Description, new { rows = "5", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Description)
                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            @Html.ArtLabelFor(model => model.DisplayOrder):
                        </td>
                        <td class="adminData">
                            @Html.ArtEditorFor(model => model.DisplayOrder)
                            @Html.ValidationMessageFor(model => model.DisplayOrder)
                        </td>
                    </tr>

                </table>
            </div>
        </div>
    </div>

</div>