@model ArtSolution.Web.Areas.Admin.Models.Customers.ApplyCashListModel
@using ArtSolution;
@{
    ViewBag.Title = "提现管理";
}

<section class="content-header">
    <h1>提现管理</h1>
</section>
<section class="content">
    <div class="portlet-body">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    @Html.DropDownListFor(model => model.AuditId, Model.AvailableAudits, "全部状态", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.ArtEditorFor(model => model.StartDate, "开始时间")
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.ArtEditorFor(model => model.EndDate, "结束时间")
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-1">
                <a href="#" class="reload btn btn-social-icon" id="search-apply-cash"><i class="fa fa-search"></i></a>
            </div>
        </div>
        
        <div id="apply-cash-grid"></div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $("#apply-cash-grid").kendoGrid({
            dataSource: {
                type: "json",
                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("List", "ApplyCash"))",
                        type: "POST",
                        dataType: "json",
                        data: additionalData
                    }
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors"
                },
                error: function (e) {
                    display_kendoui_grid_error(e);
                    // Cancel the changes
                    this.cancelChanges();
                },
                pageSize: 20,
                serverPaging: true,
                serverFiltering: false,
                serverSorting: false
            },
            pageable: {
                refresh: true,
                pageSizes: [10, 20, 50]
            },
            scrollable: false,
            columns: [
                {
                    field: "Id",
                    title: "Id",
                    width: 100,
                    headerAttributes: { style: "text-align:center" },
                    attributes: { style: "text-align:center" },
                }, {
                    field: "Amount",
                    title: "提现金额",
                    headerAttributes: { style: "text-align:center" },
                    attributes: { style: "text-align:center" },
                }, {
                    field: "Allowance",
                    title: "剩余金额",
                    headerAttributes: { style: "text-align:center" },
                    attributes: { style: "text-align:center" },
                }, {
                    field: "NickName",
                    title: "申请人",
                    headerAttributes: { style: "text-align:center" },
                    attributes: { style: "text-align:center" },
                }, {
                    field: "Moible",
                    title: "手机号",
                    headerAttributes: { style: "text-align:center" },
                    attributes: { style: "text-align:center" },
                }, {
                    field: "Audit",
                    title: "状态",
                    headerAttributes: { style: "text-align:center" },
                }, {
                    field: "CreationTime",
                    title: "创建时间",
                    width: 200,
                    type: "date",
                    format: "{0:G}"
                }, {
                    field: "Id",
                    title: "操作",
                    width: 200,
                    template: '<a class="btn btn-success" href="Edit/#=Id#">编辑</a><a class="btn btn-danger">删除</a>'
                }
            ]
        });

        //search button
        $('#search-apply-cash').click(function () {
            var grid = $('#apply-cash-grid').data('kendoGrid');
            grid.dataSource.page(0);
        });
    });
    function additionalData() {
        var data = {
            AuditId: $('#@Html.FieldIdFor(model => model.AuditId)').val(),
            StartDate: $('#@Html.FieldIdFor(model => model.StartDate)').val(),
            EndDate: $('#@Html.FieldIdFor(model => model.EndDate)').val(),
        };
        return data;
    }
</script>
