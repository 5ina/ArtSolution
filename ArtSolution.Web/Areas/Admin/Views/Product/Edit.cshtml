@model ArtSolution.Web.Areas.Admin.Models.Catalog.ProductModel
@{
    //page title
    ViewBag.Title = "编辑商品";
}

@section Styles
{
    @Html.IncludeStyle("~/Scripts/fineuploader/fineuploader-4.2.2.min.css")
    @Html.IncludeStyle("~/admin-lte/plugins/select2/select2.min.css")

}
@section Scripts
    {
    @Html.IncludeScript("~/Scripts/ckeditor/ckeditor.js")
    @Html.IncludeScript("~/Scripts/fineuploader/jquery.fineuploader-4.2.2.min.js")
    @Html.IncludeScript("~/admin-lte/plugins/select2/select2.full.min.js")

}

<section class="content-header">
    <h1>编辑商品</h1>
</section>
<section class="content">
    <div class="portlet-body">
        @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { id = "product-form" }))
        {
            @Html.AntiForgeryToken()
            <div class="section-header">
                <div class="options pull-left">
                    <input type="submit" name="save" class="btn btn-primary" value="保存" />
                    <input type="submit" name="save-continue" class="btn btn-primary btn-success" value="保存并编辑" />
                </div>

                <ol class="breadcrumbs pull-right">
                    <li><a href="@Url.Action("List")" class="btn btn-primary"><i class="fa fa-fw fa-plus-square"></i>返回列表</a></li>
                </ol>
            </div>
            @Html.Partial("_CreateOrUpdate", Model)
        }


    </div>
</section>
