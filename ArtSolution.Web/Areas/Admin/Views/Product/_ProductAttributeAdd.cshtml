@model ArtSolution.Web.Areas.Admin.Models.Catalog.ProductModel
<!-- Modal form-->

<div class="modal fade" id="product-attribute-add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">新增属性</h4>
            </div>
            <div class="modal-content">
                <div class="form-group has-feedback">
                        @Html.Label("属性",new{ @for= "AttributeId",@class= "form-title" })
                        @Html.DropDownList("AttributeId", Model.AvailableAttributes,new { @class= "form-control" })
                </div>
                <div class="form-group has-feedback">
                    @Html.Label("属性值", new { @for = "AttributeValueId", @class = "form-title" })
                    <select id="AttributeValueId" class="form-control"><option>请选择</option></select>
                </div>

                <div class="form-group has-feedback">

                    @Html.Label("价格调整", new { @for = "AttributeValuePrice", @class = "form-title" })
                    <div class="input-group">
                        <span class="input-group-addon">￥</span>
                        @Html.TextBox("AttributeValuePrice",null,new { @class= "form-control" })                        
                        <span class="input-group-addon">.00</span>
                    </div>
                </div>
                <div class="form-group has-feedback buttons">
                    <button type="button" id="product-attribute-save" class="btn btn-success">保存</button>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- end of modal ------------------------------>