@model ArtSolution.Web.Models.News.NewItemModel
@{
    ViewBag.Title = Model.MetaTitle;
}

<div class="news-detail">

    <div class="row">

        <div class="col-xs-12 ">
            <div class="row margin-bottom-5">
                <div class="col-xs-12 result-news">
                    <h2 class="title">@Model.Title</h2>
                    <small class="shop-bg-red badge-results"> @Model.PublishDateTime.ToString("yyyy/MM/dd")</small>
                </div>
            </div>
            <!-- 新闻列表 -->
            <div class="filter-results">
                <div class="full-description">
                    @Html.Raw(Model.FullDescription)
                </div>
            </div><!--/end filter resilts-->
            <div class="text-center">

            </div><!--/end pagination-->
        </div>
    </div><!--/end row-->

</div>